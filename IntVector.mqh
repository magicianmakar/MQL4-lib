class IntVector
  {
private:
   int               m_a[];
protected:
   void              Resize(int size);
public:
                     IntVector();
                     IntVector(int size);
                    ~IntVector();

   void              Push(int val);
   void              Clear();
   int               Get(int i) const;
   void              Set(int i,int val);
   int               Size() const;
  };
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
IntVector::IntVector(void)
  {
   Resize(0);
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
IntVector::IntVector(int size)
  {
   Resize(size);
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
IntVector::~IntVector()
  {
   Resize(0);
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
IntVector::Resize(int size)
  {
   ArrayResize(m_a,size,100);
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
int IntVector::Get(int i) const
  {
   return m_a[i];
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
void IntVector::Set(int i,int val)
  {
   m_a[i]=val;
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
int IntVector::Size() const
  {
   return ArraySize(m_a);
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
void IntVector::Push(int val)
  {
   int size=Size();
   Resize(size+1);
   m_a[size]=val;
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
void IntVector::Clear(void)
  {
   Resize(0);
  }
//+------------------------------------------------------------------+
