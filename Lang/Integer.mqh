//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
struct Int8
  {
   char              value;
  };
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
struct Int16
  {
   short             value;
  };
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
struct Int32
  {
   int               value;
  };
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
struct Int64
  {
   long              value;
  };
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
struct LargeInt
  {
   int               lowPart;
   int               highPart;
  };
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
struct IntBytes
  {
   uchar             value[8];
   string            toString() const;
  };
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
string IntBytes::toString(void) const
  {
   return StringFormat("0x|%02x_%02x_%02x_%02x|%02x_%02x_%02x_%02x|",value[7],value[6],value[5],value[4],value[3],value[2],value[1],value[0]);
  }
